journal = {Science of Nature},
keywords = {Division of labor,Fecundity,Intrinsic mortality,Life history,Social insects,Survival,Trade-offs},
number = {3-4},
publisher = {The Science of Nature},
title = {{Intrinsic worker mortality depends on behavioral caste and the queens' presence in a social insect}},
volume = {104},
year = {2017}
}
