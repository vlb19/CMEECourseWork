touch boilerplate.sh
code boilerplate.sh

bash boilerplate.sh

echo "Remove      excess      spaces." | tr -s "\b" " " #remove excess spaces
echo "remove all the as" | tr -d "a" #remove all the as
echo "set to uppercase" | tr [:lower:] [:upper:]
echo "10.00 only numbers 1.33" | tr -d [:alpha:] | tr -s " " "," #10.00, 1.33

