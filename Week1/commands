ls * 
ls File* #display file names beginning with File
ls *.txt #display file names ending in txt
ls File?.txt #display file names starting with File and ending with .txt
ls File[1-2].txt 
ls File[!3].* #display file names that do not include 3 

#Using grep 
wget https://raw.githubusercontent.com/mhasoba/TheMulQuaBio/master/data/spawannxs.txt
head -n 50 spawannxs.txt
mkdir ../data
mv spawannxs.txt ../data/
cd ../data
head -n 50 spawannxs.txt
grep Falco spawannxs.txt #look for Falcons 
grep -i Falco spawannxs.txt #matching is case-insensitive
grep -i ara spawannxs.txt
grep -i -w ara spawannxs.txt #-w means specific match 
grep -i -w -A 1 ara spawannxs.txt #show lines after the one that was matched
grep -i -w -B 1 ara spawannxs.txt #show lines before the one that was matched
grep -i -w -n ara spawannxs.txt #show the line number of the match
grep -i -w -v ara spawannxs.txt #print all the lines that do not match the pattern

#Finding files
mkdir TestFind
cd TestFind
mkdir -p Dir1/Dir11/Dir111 
mkdir Dir2
mkdir Dir3
touch Dir1/File1.txt
touch Dir1/File1.csv
touch Dir1/File2.txt
touch Dir1/File2.csv
touch Dir2/File2.txt
touch Dir2/File2.csv
touch Dir2/File2.tex
touch Dir1/Dir11/Dir111/File111.txt
touch Dir3/File3.txt
find . -name "File1.txt"
find . -iname "fi*.txt"
find . -maxdepth 2 -name "*.txt" #exclude sub-directories
find . -maxdepth 2 -not -name "*.txt" #exclude certain files
find . -type d -iname *dir* #find directory

find . -type f -exec ls -s {} \; | sort -n | head -10
